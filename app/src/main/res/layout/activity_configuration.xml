                </LinearLayout>

                <LinearLayout
                    android:id="@+id/visParam4"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/configurationTowHeight"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/configurationHorizontalRowPadding"
                    android:paddingTop="@dimen/configurationVerticalRowPadding"
                    android:paddingEnd="@dimen/configurationHorizontalRowPadding"
                    android:paddingBottom="@dimen/configurationVerticalRowPadding">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:text="@string/whiteLEDs"
                        android:textColor="@color/white" />

                    <EditText
                        android:id="@+id/whiteLEDs"
                        style="@style/PFEditTextDigits"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:hint="1-100"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fluoGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/fluoTitle"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/configurationTitleHeight"
                    android:gravity="center"
                    android:text="@string/fluo"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <LinearLayout
                    android:id="@+id/fluoParam1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/configurationTowHeight"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/configurationHorizontalRowPadding"
                    android:paddingTop="@dimen/configurationVerticalRowPadding"
                    android:paddingEnd="@dimen/configurationHorizontalRowPadding"
                    android:paddingBottom="@dimen/configurationVerticalRowPadding">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:text="@string/exposureTimeFluorescence"
                        android:textColor="@color/white" />

                    <EditText
                        android:id="@+id/exposureTimeFluorescence"
                        style="@style/PFEditTextDigits"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:hint="1-300000"
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fluoParam2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/configurationTowHeight"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/configurationHorizontalRowPadding"
                    android:paddingTop="@dimen/configurationVerticalRowPadding"
                    android:paddingEnd="@dimen/configurationHorizontalRowPadding"
                    android:paddingBottom="@dimen/configurationVerticalRowPadding">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:text="@string/UVLEDs"
                        android:textColor="@color/white" />

                    <EditText
                        android:id="@+id/UVLEDs"
                        style="@style/PFEditTextDigits"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:hint="0-350"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/divider1"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/header_gradient"
        app:layout_constraintBottom_toTopOf="@+id/sendRequest"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <Button
        android:id="@+id/sendRequest"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@drawable/selectable_item_background"
        android:shadowColor="@color/text_shadow"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:text="@string/sendRequest"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline4" />

    <Button
        android:id="@+id/setDefaults"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@drawable/selectable_item_background"
        android:shadowColor="@color/text_shadow"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:text="@string/setDefaults"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>
