                    android:paddingEnd="@dimen/configurationHorizontalRowPadding"
                    android:paddingBottom="@dimen/configurationVerticalRowPadding">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:text="@string/lightsOnDurationTime"
                        android:textColor="@color/white" />

                    <EditText
                        android:id="@+id/lightsOnDuration"
                        style="@style/PFEditTextLetters"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:hint="@string/enterValue"
                        android:text="5"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>

            <!--Use case 3 additional labels-->
            <include
                android:id="@+id/uc3param1"
                layout="@layout/configuration_use_case_3_param_1"
                android:visibility="gone" />

            <include
                android:id="@+id/uc3param2"
                layout="@layout/configuration_use_case_3_param_2"
                android:visibility="gone" />

            <include
                android:id="@+id/uc3param3"
                layout="@layout/configuration_use_case_3_param_3"
                android:visibility="gone" />

            <include
                android:id="@+id/uc3param4"
                layout="@layout/configuration_use_case_3_param_4"
                android:visibility="gone" />

            <include
                android:id="@+id/uc3paramOnlyAdulterationSampleId"
