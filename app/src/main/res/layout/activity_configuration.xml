                android:layout_height="@dimen/configurationTitleHeight"
                android:gravity="center"
                android:text="@string/camera"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <LinearLayout
                android:id="@+id/captureImageWhiteHolder"
                android:layout_width="match_parent"
                android:layout_height="@dimen/configurationTowHeight"
                android:orientation="horizontal"
                android:paddingStart="@dimen/configurationHorizontalRowPadding"
                android:paddingTop="@dimen/configurationVerticalRowPadding"
                android:paddingEnd="@dimen/configurationHorizontalRowPadding"
                android:paddingBottom="@dimen/configurationVerticalRowPadding">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text="@string/captureImageWhite"
                    android:textColor="@color/white" />

                <RadioGroup
                    android:id="@+id/captureImageWhiteRadioGroup"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:textColor="@color/white">

                    <RadioButton
                        android:id="@+id/yesCaptureImageWhite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/white"
                        android:text="YES"
                        android:textColor="@color/white" />

                    <RadioButton
                        android:id="@+id/noCaptureImageWhite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/white"
                        android:text="NO"
                        android:textColor="@color/white" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
