<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fruits">

        <ImageView
            android:id="@+id/overlay"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/background_gradient"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.084" />

        <ImageView
            android:id="@+id/divider1"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/header_gradient"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/configurationLayout" />

        <LinearLayout
            android:id="@+id/configurationLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/imageView6">

            <!--CAMERA PARAMS-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/configurationTitleHeight"
                android:gravity="center"
                android:text="@string/camera"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/configurationTowHeight"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/configurationVerticalRowPadding"
                android:paddingEnd="@dimen/configurationHorizontalRowPadding"
                android:paddingStart="@dimen/configurationHorizontalRowPadding"
                android:paddingTop="@dimen/configurationVerticalRowPadding">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text="@string/exposureTime"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/exposureTime"
                    style="@style/PFEditTextDigits"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="@string/enterTime"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/configurationTowHeight"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/configurationVerticalRowPadding"
                android:paddingEnd="@dimen/configurationHorizontalRowPadding"
                android:paddingStart="@dimen/configurationHorizontalRowPadding"
                android:paddingTop="@dimen/configurationVerticalRowPadding">

                <TextView
                    android:id="@+id/cameraVoltageEditText"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text="@string/cameraVoltage"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/drivingVoltage"
                    style="@style/PFEditTextDigits"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="2000-4500"
                    android:textColor="@color/white" />
            </LinearLayout>

            <!--NIR -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/configurationTitleHeight"
                android:gravity="center"
                android:text="@string/nir"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/configurationTowHeight"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/configurationVerticalRowPadding"
                android:paddingEnd="@dimen/configurationHorizontalRowPadding"
                android:paddingStart="@dimen/configurationHorizontalRowPadding"
                android:paddingTop="@dimen/configurationVerticalRowPadding">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text="@string/spectrometerSingleShot"
                    android:textColor="@color/white" />

                <RadioGroup
                    android:id="@+id/singleShotRadioGroup"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="@string/enterTime"
                    android:orientation="horizontal"
                    android:textColor="@color/white">

                    <RadioButton
                        android:id="@+id/yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/white"
                        android:text="Yes"
                        android:textColor="@color/white" />

                    <RadioButton
                        android:id="@+id/no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/white"
                        android:text="No"
                        android:textColor="@color/white" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/configurationTowHeight"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/configurationVerticalRowPadding"
                android:paddingEnd="@dimen/configurationHorizontalRowPadding"
                android:paddingStart="@dimen/configurationHorizontalRowPadding"
                android:paddingTop="@dimen/configurationVerticalRowPadding">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text="@string/spectrometerAverages"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/averagesEditText"
                    style="@style/PFEditTextDigits"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="1-1000"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/configurationTowHeight"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/configurationVerticalRowPadding"
                android:paddingEnd="@dimen/configurationHorizontalRowPadding"
                android:paddingStart="@dimen/configurationHorizontalRowPadding"
                android:paddingTop="@dimen/configurationVerticalRowPadding">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text="@string/microlampsDrivingVoltage"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/nirMicrolampsVoltage"
                    style="@style/PFEditTextDigits"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="1-5000"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/configurationTowHeight"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/configurationVerticalRowPadding"
                android:paddingEnd="@dimen/configurationHorizontalRowPadding"
                android:paddingStart="@dimen/configurationHorizontalRowPadding"
                android:paddingTop="@dimen/configurationVerticalRowPadding">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text="@string/microlampsWarmingTime"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/nirMicrolampsWarmingTime"
                    style="@style/PFEditTextDigits"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="10-1000"
                    android:textColor="@color/white" />
            </LinearLayout>

            <!--VIS-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/configurationTitleHeight"
                android:gravity="center"
                android:text="@string/vis"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/configurationTowHeight"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/configurationVerticalRowPadding"
                android:paddingEnd="@dimen/configurationHorizontalRowPadding"
                android:paddingStart="@dimen/configurationHorizontalRowPadding"
                android:paddingTop="@dimen/configurationVerticalRowPadding">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text="@string/exposureTimeVisibleReflectance"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/exposureTimeReflectance"
                    style="@style/PFEditTextDigits"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="1-300000"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/configurationTowHeight"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/configurationVerticalRowPadding"
                android:paddingEnd="@dimen/configurationHorizontalRowPadding"
                android:paddingStart="@dimen/configurationHorizontalRowPadding"
                android:paddingTop="@dimen/configurationVerticalRowPadding">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text="@string/gainVisibleReflectance"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/gainReflectance"
                    style="@style/PFEditTextDigits"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="1-10"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/configurationTowHeight"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/configurationVerticalRowPadding"
                android:paddingEnd="@dimen/configurationHorizontalRowPadding"
                android:paddingStart="@dimen/configurationHorizontalRowPadding"
                android:paddingTop="@dimen/configurationVerticalRowPadding">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text="@string/binningVisibleReflectance"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/binningReflectance"
                    style="@style/PFEditTextDigits"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="1-4"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/configurationTowHeight"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/configurationVerticalRowPadding"
                android:paddingEnd="@dimen/configurationHorizontalRowPadding"
                android:paddingStart="@dimen/configurationHorizontalRowPadding"
                android:paddingTop="@dimen/configurationVerticalRowPadding">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text="@string/whiteLEDs"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/whiteLEDs"
                    style="@style/PFEditTextDigits"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="2-4500"
                    android:textColor="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/configurationTowHeight"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/configurationVerticalRowPadding"
                android:paddingEnd="@dimen/configurationHorizontalRowPadding"
                android:paddingStart="@dimen/configurationHorizontalRowPadding"
                android:paddingTop="@dimen/configurationVerticalRowPadding">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text="@string/exposureTimeFluorescence"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/exposureTimeFluorescence"
                    style="@style/PFEditTextDigits"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="1-300000"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/configurationTowHeight"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/configurationVerticalRowPadding"
                android:paddingEnd="@dimen/configurationHorizontalRowPadding"
                android:paddingStart="@dimen/configurationHorizontalRowPadding"
                android:paddingTop="@dimen/configurationVerticalRowPadding">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text="@string/gainFluorescence"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/gainFluorescence"
                    style="@style/PFEditTextDigits"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="1-10"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/configurationTowHeight"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/configurationVerticalRowPadding"
                android:paddingEnd="@dimen/configurationHorizontalRowPadding"
                android:paddingStart="@dimen/configurationHorizontalRowPadding"
                android:paddingTop="@dimen/configurationVerticalRowPadding">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text="@string/binningFluorescence"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/binningFluorescence"
                    style="@style/PFEditTextDigits"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="1-4"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/configurationTowHeight"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/configurationVerticalRowPadding"
                android:paddingEnd="@dimen/configurationHorizontalRowPadding"
                android:paddingStart="@dimen/configurationHorizontalRowPadding"
                android:paddingTop="@dimen/configurationVerticalRowPadding">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text="@string/UVLEDs"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/UVLEDs"
                    style="@style/PFEditTextDigits"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="2000-4200"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/sendRequest"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:background="@drawable/selectable_item_background"
            android:shadowColor="@color/text_shadow"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:text="Send request"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline4"
            app:layout_constraintTop_toBottomOf="@+id/divider1" />

        <Button
            android:id="@+id/setDefaults"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:background="@drawable/selectable_item_background"
            android:shadowColor="@color/text_shadow"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:text="Set defaults"
            android:textColor="@color/white"
            app:layout_constraintEnd_toStartOf="@+id/guideline4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider1" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="130dp"
            android:layout_height="45dp"
            android:src="@drawable/phasma_food_logo"
            app:layout_constraintBottom_toTopOf="@+id/guideline3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.6" />

        <Button
            android:id="@+id/backButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/ic_back"
            app:layout_constraintBottom_toTopOf="@+id/guideline3"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.6" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="@drawable/header_gradient"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="@drawable/header_gradient"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline3" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>
