                    android:orientation="horizontal"
                    android:textColor="@color/white">

                    <RadioButton
                        android:id="@+id/yesCaptureImageUV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/white"
                        android:text="YES"
                        android:textColor="@color/white" />

                    <RadioButton
                        android:id="@+id/noCaptureImageUV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/white"
                        android:text="NO"
                        android:textColor="@color/white" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/captureImageNIRHolder"
