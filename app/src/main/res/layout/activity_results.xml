<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fruits">

    <ImageView
        android:id="@+id/overlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/background_gradient"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="130dp"
        android:layout_height="45dp"
        android:src="@drawable/phasma_food_logo"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6" />

    <ImageView
        android:id="@+id/header_divider"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@drawable/header_gradient"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline3" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/ic_back"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.11" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@drawable/header_gradient"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- screen components -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/header_divider">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title"
                style="@style/PFTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/resultsReceived"
                app:layout_constraintHorizontal_bias="0.502"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title" />

            <TextView
                android:id="@+id/useCase"
                style="@style/PFTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:text="Use case:"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/buttonVis" />

            <TextView
                android:id="@+id/useCaseValue"
                style="@style/PFTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="n/a"
                app:layout_constraintBottom_toBottomOf="@+id/useCase"
                app:layout_constraintStart_toEndOf="@+id/useCase"
                app:layout_constraintTop_toTopOf="@+id/useCase" />

            <TextView
                android:id="@+id/visTitle"
                style="@style/PFTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:text="VIS data analysis:"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/param3Title" />

            <TextView
                android:id="@+id/nirTitle"
                style="@style/PFTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:text="NIR data analysis:"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/visTitle" />

            <TextView
                android:id="@+id/flouTitle"
                style="@style/PFTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:text="FLOU data analysis:"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nirTitle" />

            <TextView
                android:id="@+id/visValue"
                style="@style/PFTextView"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:text="n/a"
                app:layout_constraintBottom_toBottomOf="@+id/visTitle"
                app:layout_constraintStart_toEndOf="@+id/visTitle"
                app:layout_constraintTop_toTopOf="@+id/visTitle"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/nirValue"
                style="@style/PFTextView"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:text="n/a"
                app:layout_constraintBottom_toBottomOf="@+id/nirTitle"
                app:layout_constraintStart_toEndOf="@+id/nirTitle"
                app:layout_constraintTop_toTopOf="@+id/nirTitle" />

            <TextView
                android:id="@+id/flouValue"
                style="@style/PFTextView"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:text="n/a"
                app:layout_constraintBottom_toBottomOf="@+id/flouTitle"
                app:layout_constraintStart_toEndOf="@+id/flouTitle"
                app:layout_constraintTop_toTopOf="@+id/flouTitle" />

            <TextView
                android:id="@+id/sample"
                style="@style/PFTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Sample/food:"
                app:layout_constraintStart_toStartOf="@+id/useCase"
                app:layout_constraintTop_toBottomOf="@+id/useCase" />

            <TextView
                android:id="@+id/sampleValue"
                style="@style/PFTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="n/a"
                app:layout_constraintBottom_toBottomOf="@+id/sample"
                app:layout_constraintStart_toEndOf="@+id/sample"
                app:layout_constraintTop_toTopOf="@+id/sample" />

            <TextView
                android:id="@+id/param1Title"
                style="@style/PFTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:text="Granularity:"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sample" />

            <TextView
                android:id="@+id/param1Value"
                style="@style/PFTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="n/a"
                app:layout_constraintBottom_toBottomOf="@+id/param1Title"
                app:layout_constraintStart_toEndOf="@+id/param1Title"
                app:layout_constraintTop_toTopOf="@+id/param1Title" />

            <TextView
                android:id="@+id/param2Title"
                style="@style/PFTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:text="Exposure time:"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/param1Title" />

            <TextView
                android:id="@+id/param2Value"
                style="@style/PFTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="n/a"
                app:layout_constraintBottom_toBottomOf="@+id/param2Title"
                app:layout_constraintStart_toEndOf="@+id/param2Title"
                app:layout_constraintTop_toTopOf="@+id/param2Title" />

            <TextView
                android:id="@+id/param3Title"
                style="@style/PFTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:text="Storage temperature:"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/param2Title" />

            <TextView
                android:id="@+id/param3Value"
                style="@style/PFTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="n/a"
                app:layout_constraintBottom_toBottomOf="@+id/param3Title"
                app:layout_constraintStart_toEndOf="@+id/param3Title"
                app:layout_constraintTop_toTopOf="@+id/param3Title"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/param4Title"
                style="@style/PFTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:text="Dataset label:"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/flouTitle" />

            <TextView
                android:id="@+id/param4Value"
                style="@style/PFTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="n/a"
                app:layout_constraintBottom_toBottomOf="@+id/param4Title"
                app:layout_constraintStart_toEndOf="@+id/param4Title"
                app:layout_constraintTop_toTopOf="@+id/param4Title"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:layout_constraintTop_toBottomOf="@+id/param4Value" />

            <Button
                android:id="@+id/buttonNir"
                android:layout_width="@dimen/graphLegendButtonWidth"
                android:layout_height="@dimen/graphLegendButtonHeight"
                android:layout_marginStart="16dp"
                android:background="@drawable/nir_button_selector"
                android:text="NIR"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/chart" />

            <Button
                android:id="@+id/buttonVis"
                android:layout_width="@dimen/graphLegendButtonWidth"
                android:layout_height="@dimen/graphLegendButtonHeight"
                android:layout_marginStart="16dp"
                android:background="@drawable/vis_button_selector"
                android:text="VIS"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/buttonNir"
                app:layout_constraintTop_toBottomOf="@+id/chart" />

            <Button
                android:id="@+id/buttonFluo"
                android:layout_width="@dimen/graphLegendButtonWidth"
                android:layout_height="@dimen/graphLegendButtonHeight"
                android:layout_marginStart="16dp"
                android:background="@drawable/fluo_button_selector"
                android:text="FLUO"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/buttonVis"
                app:layout_constraintTop_toBottomOf="@+id/chart" />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>