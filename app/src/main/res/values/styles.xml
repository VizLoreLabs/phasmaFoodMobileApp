<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ComponentShadow">
        <item name="android:shadowColor">@color/text_shadow</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="PFEditText" parent="ComponentShadow">
        <item name="android:textColorHint">#b3b3b3</item>
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/white_border_button</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="PFRadioButton" parent="ComponentShadow">
        <item name="android:background">@drawable/button_white_border_selector</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/radio_button_text_selector</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="PFButtonWhite" parent="ComponentShadow">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/button_white_border_selector</item>
        <item name="android:textColor">@drawable/button_text_selector</item>
        <item name="android:layout_marginStart">@dimen/buttonHorizontalMargin</item>
        <item name="android:layout_marginEnd">@dimen/buttonHorizontalMargin</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="PFButtonWhiteSmall" parent="ComponentShadow">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/button_white_border_selector</item>
        <item name="android:textColor">@drawable/button_text_selector</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PFButtonBlue" parent="ComponentShadow">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/button_blue_selector</item>
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="PFTitle" parent="ComponentShadow">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:textSize">@dimen/titleTextSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PFSubtitle" parent="ComponentShadow">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:textSize">@dimen/subtitleTextSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PFSpinnerItemStyle" parent="ComponentShadow">
        <item name="android:textColorHint">#b3b3b3</item>
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/white_border_button</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
