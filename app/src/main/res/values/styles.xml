<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ComponentShadow">
        <item name="android:shadowColor">@color/text_shadow</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="PFEditText" parent="ComponentShadow">
        <item name="android:textColorHint">#b3b3b3</item>
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/white_border_button</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="PFEditTextDigits" parent="PFEditText">
        <item name="android:inputType">number</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PFTextView" parent="ComponentShadow">
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="PFButtonWhite" parent="ComponentShadow">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/button_white_border_selector</item>
        <item name="android:textColor">@drawable/button_text_selector</item>
        <item name="android:layout_marginStart">@dimen/buttonHorizontalMargin</item>
        <item name="android:layout_marginEnd">@dimen/buttonHorizontalMargin</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="PFButtonWhiteSmall" parent="ComponentShadow">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/button_white_border_selector</item>
        <item name="android:textColor">@drawable/button_text_selector</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PFButtonBlue" parent="ComponentShadow">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/button_blue_selector</item>
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="PFTitle" parent="ComponentShadow">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:textSize">@dimen/titleTextSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PFSubtitle" parent="ComponentShadow">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:textSize">@dimen/subtitleTextSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PFSpinnerItemStyle" parent="ComponentShadow">
        <item name="android:textColorHint">#b3b3b3</item>
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/white_border_button</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="WizardPageTitle">
        <item name="android:id">@android:id/title</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:paddingLeft">@dimen/list_item_padding_left</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">#ff0099cc</item>
    </style>

    <style name="WizardPageContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:paddingLeft">?android:attr/listPreferredItemPaddingLeft</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">#ff0099cc</item>
    </style>

    <style name="ButtonBarButton">
        <item name="android:minHeight">@dimen/list_item_height_small</item>
    </style>

    <style name="TextAppearanceFinish">
        <item name="android:textColor">#fff</item>
    </style>

    <style name="WizardPageContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>
</resources>
